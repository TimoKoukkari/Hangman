<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hangman"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:hardwareAccelerated="true">
       <activity
           android:configChanges="keyboardHidden|orientation|screenSize"
            android:name="com.example.hangman.IntroActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.hangman.HangmanActivity"
            android:label="@string/app_name"
            android:parentActivityName=".IntroActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HangmanActivity" />
        </activity>
    </application>
</manifest>